<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="137dp"
        android:layout_height="134dp"
        android:layout_marginBottom="39dp"
        android:layout_marginEnd="38dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="38dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/roundedbutton"
        android:text="Packing"
        android:textColor="#f9f7f7"
        app:layout_constraintBottom_toTopOf="@+id/buttonTracking"
        app:layout_constraintEnd_toStartOf="@+id/ButtonShipping"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonTracking"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_marginBottom="84dp"
        android:layout_marginEnd="111dp"
        android:layout_marginStart="111dp"
        android:background="@drawable/roundedbutton"
        android:text="Track"
        android:textColor="#f9f7f7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ButtonShipping"
        android:layout_width="137dp"
        android:layout_height="134dp"
        android:layout_marginBottom="39dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/roundedbutton"
        android:text="Shipping"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/buttonTracking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>